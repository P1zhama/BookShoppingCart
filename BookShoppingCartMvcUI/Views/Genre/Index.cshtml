@model IEnumerable<Genre>

<h2 class="mt-4 m-3" >Жанры</h2>

<a asp-action="AddGenre" asp-controller="Genre" class="brn btn-primary m-3" style="font-size:20px"> Добавить жанр </a>

<table class="table table-striped my-2"style="width:400px">
    <tr>
        <th>Жанр</th>
        <th>Действия</th>
    </tr>

    @foreach(var genre in Model)
    {
        <tr>
            <td>@genre.GenreName</td>
            <td>
                <a asp-action="UpdateGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-success">Редактировать</a>           
            </td>
        </tr>
    }

</table>

