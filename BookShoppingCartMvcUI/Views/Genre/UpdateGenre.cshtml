@model GenreDTO

<div style="width:500px">

    <h2 class="m-4">Обновить жанр</h2>

    <form asp-action="UpdateGenre">

        <input type="hidden" asp-for="Id" />

        <div class="my-2">
            <label>Жанр</label>
            <input type="text" class="form-control" asp-for="GenreName" />
            <span asp-validation-for="GenreName" class="text-dange"></span>
        </div>
            
        <div class="my-2">
            <button type="submit" class="btn btn-info mt-2">Обновить</button>
        </div>

    </form>

</div>